                <input type="hidden" name="action" value="">
                <input type="hidden" name="redirect" value="">
                <div class="form-group">
                  <input type="text" name="name" class="form-control" placeholder="Nome" required="required" id="name">
                </div>
                <div class="form-group">
                  <input type="text"  name="email" class="form-control" placeholder="E-mail" id="fromEmail">
                </div>
                <div class="form-group">
                  <input type="text" name="phone" class="form-control" placeholder="Telemóvel"  id="phone-number">
                </div>
                <div class="form-group">
                  <select name="location" class="form-control" required="required" id="city-id"><option value="">Localidade</option>
